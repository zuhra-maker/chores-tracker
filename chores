<body>
    <div class="container">
        <h1>üè° Kids Chores Tracker</h1>
        
        <div class="stats">
            <div class="stat-item">
                <div class="stat-number" id="completedCount">0</div>
                <div class="stat-label">Completed</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="totalCount">0</div>
                <div class="stat-label">Total Chores</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="percentComplete">0%</div>
                <div class="stat-label">Progress</div>
            </div>
        </div>

        <div class="rooms-grid" id="roomsGrid"></div>

        <button class="rotate-btn" onclick="rotateKids()">üîÑ Rotate Kids to Next Rooms</button>
        <button class="reset-btn" onclick="resetAll()">Reset All Chores</button>
    </div>

    <div class="overlay" id="overlay"></div>
    <div class="celebration" id="celebration">
        <h2>üéâ Amazing!</h2>
        <p>All chores completed!</p>
    </div>

    <script>
        const choresData = {
            bedroom: {
                name: "Bedrooms",
                icon: "üõèÔ∏è",
                chores: [
                    "Make your bed",
                    "Put dirty clothes in hamper",
                    "Put toys away",
                    "Clear floor of items",
                    "Dust shelves"
                ]
            },
            bathroom: {
                name: "Bathroom",
                icon: "üöø",
                chores: [
                    "Hang up towels",
                    "Put toiletries away",
                    "Wipe sink",
                    "Empty trash",
                    "Check toilet paper"
                ]
            },
            kitchen: {
                name: "Kitchen",
                icon: "üçΩÔ∏è",
                chores: [
                    "Clear the table",
                    "Load dishwasher",
                    "Wipe counters",
                    "Sweep floor",
                    "Take out trash"
                ]
            },
            livingRoom: {
                name: "Living Room",
                icon: "üõãÔ∏è",
                chores: [
                    "Fluff cushions",
                    "Put away books/magazines",
                    "Organize remote controls",
                    "Vacuum carpet",
                    "Dust TV stand"
                ]
            },
            corridor: {
                name: "Corridor",
                icon: "üö™",
                chores: [
                    "Put shoes away",
                    "Hang up coats",
                    "Organize shoe rack",
                    "Sweep/vacuum floor",
                    "Tidy entrance area"
                ]
            },
            garden: {
                name: "Garden",
                icon: "üå≥",
                chores: [
                    "Water plants",
                    "Pick up toys",
                    "Sweep paths/patio",
                    "Put away outdoor equipment",
                    "Fill bird feeder",
                    "Pick up litter",
                    "Tidy flower beds"
                ]
            }

        };

        let completedChores = {};
        const kids = ['M', 'A', 'U'];
        let roomAssignments = {};

        function loadProgress() {
            const saved = localStorage.getItem('choresProgress');
            if (saved) {
                completedChores = JSON.parse(saved);
            }
        }

        function saveProgress() {
            localStorage.setItem('choresProgress', JSON.stringify(completedChores));
        }

        function initializeAssignments() {
            const saved = localStorage.getItem('roomAssignments');
            if (saved) {
                roomAssignments = JSON.parse(saved);
            } else {
                // Initial assignment
                const roomKeys = Object.keys(choresData);
                roomKeys.forEach((room, idx) => {
                    roomAssignments[room] = kids[idx % kids.length];
                });
                saveAssignments();
            }
        }

        function saveAssignments() {
            localStorage.setItem('roomAssignments', JSON.stringify(roomAssignments));
        }

        function rotateKids() {
            if (confirm('This will rotate kids to their next rooms and reset all chores. Continue?')) {
                const roomKeys = Object.keys(choresData);
                const newAssignments = {};
                
                // Rotate each kid to the next room
                roomKeys.forEach((room, idx) => {
                    const currentKid = roomAssignments[room];
                    const currentKidIndex = kids.indexOf(currentKid);
                    const nextKidIndex = (currentKidIndex + 1) % kids.length;
                    newAssignments[room] = kids[nextKidIndex];
                });
                
                roomAssignments = newAssignments;
                saveAssignments();
                
                // Reset all chores
                completedChores = {};
                saveProgress();
                
                renderRooms();
            }
        }

        function renderRooms() {
            const grid = document.getElementById('roomsGrid');
            grid.innerHTML = '';

            Object.keys(choresData).forEach(roomKey => {
                const room = choresData[roomKey];
                const completed = room.chores.filter((_, idx) => 
                    completedChores[`${roomKey}-${idx}`]
                ).length;
                const progress = `${completed}/${room.chores.length}`;

                const roomCard = document.createElement('div');
                roomCard.className = 'room-card';
                roomCard.innerHTML = `
                    <div class="room-header">
                        <div class="room-icon">${room.icon}</div>
                        <div class="room-title">${room.name}</div>
                        <div class="assigned-kid">${roomAssignments[roomKey] || ''}</div>
                        <div class="room-progress">${progress}</div>
                    </div>
                    <div class="chores-list">
                        ${room.chores.map((chore, idx) => {
                            const choreId = `${roomKey}-${idx}`;
                            const isCompleted = completedChores[choreId] || false;
                            return `
                                <div class="chore-item ${isCompleted ? 'completed' : ''}" 
                                     onclick="toggleChore('${choreId}')">
                                    <div class="checkbox">
                                        <span class="checkmark">‚úì</span>
                                    </div>
                                    <div class="chore-text">${chore}</div>
                                </div>
                            `;
                        }).join('')}
                    </div>
                `;
                grid.appendChild(roomCard);
            });

            updateStats();
        }

        function toggleChore(choreId) {
            completedChores[choreId] = !completedChores[choreId];
            saveProgress();
            renderRooms();
            checkAllComplete();
        }

        function updateStats() {
            let total = 0;
            let completed = 0;

            Object.keys(choresData).forEach(roomKey => {
                const room = choresData[roomKey];
                total += room.chores.length;
                room.chores.forEach((_, idx) => {
                    if (completedChores[`${roomKey}-${idx}`]) {
                        completed++;
                    }
                });
            });

            document.getElementById('completedCount').textContent = completed;
            document.getElementById('totalCount').textContent = total;
            document.getElementById('percentComplete').textContent = 
                total > 0 ? Math.round((completed / total) * 100) + '%' : '0%';
        }

        function checkAllComplete() {
            let total = 0;
            let completed = 0;

            Object.keys(choresData).forEach(roomKey => {
                const room = choresData[roomKey];
                total += room.chores.length;
                room.chores.forEach((_, idx) => {
                    if (completedChores[`${roomKey}-${idx}`]) {
                        completed++;
                    }
                });
            });

            if (total > 0 && completed === total) {
                showCelebration();
            }
        }

        function showCelebration() {
            document.getElementById('overlay').classList.add('show');
            document.getElementById('celebration').classList.add('show');
            
            setTimeout(() => {
                document.getElementById('overlay').classList.remove('show');
                document.getElementById('celebration').classList.remove('show');
            }, 3000);
        }

        function resetAll() {
            if (confirm('Are you sure you want to reset all chores?')) {
                completedChores = {};
                saveProgress();
                renderRooms();
            }
        }

        // Initialize
        loadProgress();
        initializeAssignments();
        renderRooms();
    </script>
</body>
</html>
